{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "defines": [],
            "compilerPath": "/usr/bin/g++", // Mettez le chemin de votre compilateur ici, par exemple, "C:\\MinGW\\bin\\g++.exe"
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "gcc-x64",
            "browse": {
                "path": [
                    "${workspaceFolder}"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            },
            "compilerArgs": [
                "-I${workspaceFolder}/Monolympic/SFML/include", // Remplacez cela par le chemin vers les fichiers d'en-tête SFML
                "-std=c++17" // Utilisez la version de C++ adaptée
            ],
            "forcedInclude": [
                "${workspaceFolder}/path/to/sfml/includes/SFML/Graphics.hpp" // Remplacez cela par le chemin de l'en-tête SFML que vous utilisez
            ],
            "debugSettings": {
                "environment": [],
                "externalConsole": false,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "preprocessorDefinitions": [],
            "includePath": [
                "${workspaceFolder}/Monolympic/SFML/include" // Remplacez cela par le chemin vers les fichiers d'en-tête SFML
            ]
        }
    ],
    "version": 4
}
